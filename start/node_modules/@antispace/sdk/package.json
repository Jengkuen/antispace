{
  "name": "@antispace/sdk",
  "version": "0.0.10",
  "main": "./index.js",
  "scripts": {
    "build": "rimraf dist && pnpm run build:common && pnpm run build:types",
    "build:common": "esbuild ./src/index.ts --outdir=dist --platform=node --sourcemap --bundle",
    "build:types": "tsc --emitDeclarationOnly --declaration --project tsconfig.json --outDir dist",
    "publish": "cp package.json dist && cd dist && sed -i '' 's/sdk/sdk/g' package.json && npm publish"
  },
  "files": ["./"],
  "typings": "./dist/index.d.ts",
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "esbuild": "0.17.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "react-element-to-jsx-string": "^15.0.0"
  },
  "resolutions": {
    "@types/react": "^18.3.1"
  }
}
